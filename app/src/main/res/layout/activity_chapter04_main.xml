<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chapter04.Chapter04MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chapter0_main_ll"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/chapter04_main_toptext"
            android:text="Chapter04"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal"
        android:id="@+id/chapter_main_gl"
        app:layout_constraintTop_toBottomOf="@+id/chapter0_main_ll">

        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="chapter04 ActLife"
            android:id="@+id/go_chapter04_ActLife"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="chapter04 ActUri"
            android:id="@+id/go_chapter04_ActUri"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="chapter04 ActLife"
            android:id="@+id/go_chapter04_ActJump2"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="chapter04 ActLife"
            android:id="@+id/go_chapter04_ActJump4"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>